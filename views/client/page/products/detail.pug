extends ../../layouts/default.pug

block main 
  .container.my-3 
    .row 
      .col-12 
        if (product.title)
          h1.mb-4.tieude #{product.title}

        if (product.price)
          div.mb-4.gia 
            | Giá: 
            b #{product.price}$

        if product.discountPercentage
          div.mb-4.discount 
            | Giảm giá: 
            b #{product.discountPercentage}%

        if product.stock
          div.mb-4.tonkho 
            | Còn lại: 
            b #{product.stock}

        if product.thumbnail
          div.mb-4.anh
            img(src=product.thumbnail style="width: 100px")

        if product.position
          div.mb-4.vitri 
            | Vị trí: 
            b #{product.position}

        if product.description
          div.mb-4.mota !{product.description}
